<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Section: Info Rows and Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Info Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <!-- Username -->
                <LinearLayout
                    android:id="@+id/fecha_cita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/profile"
                        android:contentDescription="Usuario" />

                    <TextView
                        android:id="@+id/tvNombreUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/nombre_de_usuario"
                        android:textColor="#2D3748"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Document Number -->
                <LinearLayout
                    android:id="@+id/tipo_cita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/target"
                        android:contentDescription="Documento" />

                    <TextView
                        android:id="@+id/tvNumeroDocumento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Número de documento"
                        android:textColor="#2D3748"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Full Name -->
                <LinearLayout
                    android:id="@+id/profesional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/profesional"
                        android:contentDescription="Nombre" />

                    <TextView
                        android:id="@+id/tvNombrePersona"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Cathalina Cañon"
                        android:textColor="#2D3748"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Buttons Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="8dp">

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:backgroundTint="#417EF2"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:backgroundTint="#C74040"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#E2E8F0" />

        <!-- View Button -->
        <Button
            android:id="@+id/btnVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ver"
            android:backgroundTint="#2D3748"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:paddingVertical="10dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

