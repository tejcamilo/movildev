<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ayudaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ENCABEZADO azul -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#D8E6F5"
        app:cardElevation="4dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Logo"
        android:elevation="10dp"
        android:src="@drawable/ic_arrowback"
        android:color="@color/azul_main"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="10dp" />

    <ImageView
        android:id="@+id/logocitaspeque"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:elevation="30dp"
        android:src="@drawable/ic_help"
        android:tint="@color/azul_main"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="18dp"
        tools:ignore="MissingConstraints,UseAppTint" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="110dp"
        android:layout_height="26dp"
        android:elevation="10dp"
        android:fontFamily="serif"
        android:text="Ayuda"
        android:textColor="@color/azul_main"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="18dp" />

    <!-- Panel de chat -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chatPanel"
        android:layout_width="354dp"
        android:layout_height="510dp"
        android:backgroundTint="#DADADA"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="90dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconBot"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_robot"
                android:tint="@color/azul_main"
                android:background="@android:color/white"
                android:layout_marginEnd="40dp"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/mensajeBot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, ¿cómo te puedo ayudar?"
                android:background="@drawable/bubble_white"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/iconBot"
                app:layout_constraintTop_toTopOf="@id/iconBot" />

            <EditText
                android:id="@+id/inputMensaje"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Escribe un mensaje..."
                android:backgroundTint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnEnviar"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/btnEnviar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_send"
                android:tint="@color/azul_main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/logocitaspeque"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:elevation="30dp"
        android:src="@drawable/ic_help"
        android:tint="@color/azul_main"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="676dp"
        tools:ignore="MissingConstraints,UseAppTint" />
    <TextView
        android:id="@+id/citasPeque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:textColor="@color/azul_main"
        android:textSize="14dp"
        android:elevation="30dp"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="705dp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/logoperfilpeque"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:background="@android:color/transparent"
        android:elevation="30dp"
        android:src="@drawable/ic_user"
        android:tint="@color/azul_main"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="679dp"
        tools:ignore="MissingConstraints,UseAppTint" />
    <TextView
        android:id="@+id/PerfilPeque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textColor="@color/azul_main"
        android:textSize="14dp"
        android:elevation="30dp"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="705dp"
        tools:ignore="MissingConstraints" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#D8E6F5"
        app:menu="@menu/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
