<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <LinearLayout
        android:id="@+id/factura_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:background="@drawable/rounded_background">
        <!-- COL1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingHorizontal="5dp">
            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendar" />

                <TextView
                    android:id="@+id/fechaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:layout_marginStart="8dp"
                    android:textColor="#2D3748" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tipo_cita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tipo_cita" />

                <TextView
                    android:id="@+id/tratamientoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tratamiento"
                    android:layout_marginStart="8dp"
                    android:textColor="#2D3748" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/modalidad" />

                <TextView
                    android:id="@+id/modalidadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modalidad"
                    android:layout_marginStart="8dp"
                    android:textColor="#2D3748" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/paciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/nombrePacienteCitaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:layout_marginStart="8dp"
                    android:textColor="#2D3748" />
            </LinearLayout>


        </LinearLayout>

        <!-- COL2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="5dp"

            android:foreground="?attr/selectableItemBackground"

            >

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/editar_cita"
                android:background="@android:color/transparent"
       />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFuente"
                android:textStyle="bold"
                android:text="Modificar" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>
