<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
            android:layout_width="412dp"
            android:layout_height="56dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/fondo_3"
            tools:ignore="MissingConstraints">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="androidx.fragment.app.FragmentContainerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>


    <androidx.fragment.app.FragmentContainerView

        android:name="androidx.fragment.app.FragmentContainerView"
        android:layout_width="414dp"
        android:layout_height="608dp"
        android:layout_marginTop="60dp"
        android:background="@color/fondo_2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentfondo"
        android:name="androidx.fragment.app.FragmentContainerView"
        android:layout_width="275dp"
        android:layout_height="222dp"
        android:alpha="0.3"
        android:background="@drawable/rounded_fragment2"
        android:elevation="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="354dp" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="110dp"
        android:layout_height="26dp"
        android:elevation="10dp"
        android:fontFamily="serif"
        android:text="Facturación"
        android:textColor="@color/azul_main"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="18dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Logo"
        android:elevation="10dp"
        android:src="@drawable/ic_arrowback"
        app:tint="@color/azul_main"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="33dp"
        android:layout_height="27dp"
        android:background="@android:color/transparent"
        android:contentDescription="Logo"
        android:elevation="10dp"
        android:src="@drawable/ic_facturacion"
        android:tint="@color/azul_main"

        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="17dp"
        tools:ignore="MissingConstraints" />

    <ImageView

        android:layout_width="190dp"
        android:layout_height="168dp"
        app:srcCompat="@drawable/user_2"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Completo"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="260dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor de la Cita"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="449dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tratamiento"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="365dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID 1000000000"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="279dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Factura Electrónica"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="518dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de teléfono"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="298dp" />

    <EditText
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:hint="Seleccione"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="392dp" />

    <EditText
        android:layout_width="143dp"
        android:layout_height="39dp"
        android:hint="Valor"
        android:inputType="number"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="478dp" />

    <EditText
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:hint="Seleccione"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="537dp" />

    <Button
        android:layout_width="86dp"
        android:layout_height="29dp"
        android:background="@drawable/button_rounded"
        android:elevation="10dp"
        android:text="Guardar"
        android:textColor="@color/white"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="609dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>



