<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="56dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/fondo_3"
        tools:ignore="MissingConstraints"/>


    <androidx.fragment.app.FragmentContainerView
        android:name="androidx.fragment.app.FragmentContainerView"
        android:layout_width="296dp"
        android:layout_height="551dp"
        android:alpha="0.3"
        android:background="@drawable/rounded_fragment2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:id="@+id/Facturaciontext"
        android:layout_width="110dp"
        android:layout_height="26dp"
        android:elevation="10dp"
        android:text="@string/facturaci_n"
        android:textColor="@color/azul_main"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="17dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/flechaatras"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/flecha_atras"
        android:elevation="10dp"
        android:src="@drawable/ic_arrowback"
        app:tint="@color/azul_main"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="DuplicateIds,MissingConstraints" />


    <ImageView

        android:layout_width="33dp"
        android:layout_height="27dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/logofacturacion"
        android:elevation="10dp"
        android:src="@drawable/ic_facturacion"
        android:tint="@color/azul_main"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="17dp"
        tools:ignore="MissingConstraints,UseAppTint" />


    <EditText
        android:id="@+id/editText3"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_o_razon_social"
        android:inputType="text"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="124dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_completo"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="91dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/n_mero_de_documento"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="175dp" />

    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="@string/seleccione"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="202dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n_mero_de_tel_fono"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="249dp" />

    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="@string/n_mero_de_tel_fono"
        android:inputType="number|phone"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="279dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correo_electr_nico"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="325dp" />


    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="@string/correo_electr_nico"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor_de_la_cita"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="478dp" />


    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="@string/valor"
        android:inputType="number"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="507dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/factura_electr_nica"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="553dp" />


    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="@string/seleccione"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="580dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tratamiento"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="401dp" />

    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="@string/seleccione"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="431dp" />


    <Button
        android:layout_width="93dp"
        android:layout_height="43dp"
        android:background="@drawable/button_rounded_claro"
        android:elevation="10dp"
        android:text="@string/guardar"
        android:textColor="@color/white"
        android:textSize="11sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="670dp" />

    <Button
        android:layout_width="91dp"
        android:layout_height="42dp"
        android:background="@drawable/button_rounded_rojo"
        android:elevation="10dp"
        android:text="@string/eliminar"
        android:textColor="@color/white"
        android:textSize="11sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="670dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/fondo_3"
        app:menu="@menu/bottom_menu"
        tools:menu="@menu/bottom_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemIconTint="@color/azul_main"
        app:itemTextColor="@color/azul_main"
        app:labelVisibilityMode="labeled"/>



</androidx.constraintlayout.widget.ConstraintLayout>