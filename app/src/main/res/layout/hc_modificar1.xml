<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="56dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/fondo_3"
        tools:ignore="MissingConstraints"/>


    <androidx.fragment.app.FragmentContainerView
        android:name="androidx.fragment.app.FragmentContainerView"
        android:layout_width="295dp"
        android:layout_height="434dp"
        android:alpha="0.3"
        android:background="@drawable/rounded_fragment2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/HistoriaClinicaTitulo"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:elevation="10dp"
        android:text="Historia Clinica"
        android:textColor="@color/azul_main"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="17dp" />

    <ImageView
        android:id="@+id/flechaatras"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:src="@drawable/ic_arrowback"
        app:tint="@color/azul_main"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="DuplicateIds,MissingConstraints" />


    <ImageView

        android:layout_width="33dp"
        android:layout_height="27dp"
        android:background="@android:color/transparent"
        android:contentDescription="logoHC"
        android:elevation="10dp"
        android:src="@drawable/ic_hc"
        android:tint="@color/azul_main"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="17dp"
        tools:ignore="MissingConstraints,UseAppTint" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enfermedades previas"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cirugias"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="312dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Alergias"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="234dp" />

    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="Niega"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="511dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="Alergia al polvo"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="264dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="Niega"
        android:inputType="text"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="181dp" />

    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="Niega"
        android:inputType="number|phone"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="347dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Embarazos"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="398dp" />


    <EditText
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:hint="1"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="432dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MedicaciÃ³n previa"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="480dp" />

    <Button
        android:id="@+id/botonGuardar"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/button_rounded"
        android:elevation="10dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="Guardar"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/fondo_3"
        app:menu="@menu/bottom_menu"
        tools:menu="@menu/bottom_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemIconTint="@color/azul_main"
        app:itemTextColor="@color/azul_main"
        app:labelVisibilityMode="labeled"/>



</androidx.constraintlayout.widget.ConstraintLayout>