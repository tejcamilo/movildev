<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="405dp"
        android:layout_height="51dp"
        android:background="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:elevation="10dp"
        android:fontFamily="serif"
        android:text="FisioCare"
        android:textColor="@color/azul_main"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="18dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/flechaatras"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Logo"
        android:elevation="10dp"
        android:src="@drawable/ic_arrowback"
        android:tint="@color/azul_main"

        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="10dp" />


    <ImageView
        android:id="@+id/logofactura"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="Logo"
        android:elevation="10dp"
        android:src="@drawable/hand_heart_svgrepo_com"

        app:tint="@color/azul_main"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentfondo"
        android:name="androidx.fragment.app.FragmentContainerView"
        android:layout_width="410dp"
        android:layout_height="621dp"
        android:layout_marginTop="48dp"
        android:background="@color/fondo_main"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />




    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="androidx.fragment.app.FragmentContainerView"
        android:layout_width="251dp"
        android:layout_height="159dp"
        android:alpha="0.3"
        android:background="@drawable/rounded_fragment"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="300dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/CrearFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Factura"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="335dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="73dp"
        android:layout_height="23dp"
        android:background="@drawable/button_rounded"
        android:elevation="10dp"
        android:text="Ir"
        android:textColor="@color/white"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="408dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ConsultarFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar Factura"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="408dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="73dp"
        android:layout_height="23dp"
        android:background="@drawable/button_rounded"
        android:elevation="10dp"
        android:text="Ir"
        android:textColor="@color/white"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="335dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Facturaciontext"
        android:layout_width="233dp"
        android:layout_height="60dp"
        android:fontFamily="serif"
        android:text="FacturaciÃ³n"
        android:textColor="@color/white"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="137dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logofacturagrande"
        android:layout_width="63dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:src="@drawable/ic_facturacion"
        android:tint="@color/white"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="125dp"
        tools:ignore="MissingConstraints,UseAppTint" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="4dp"
        android:elevation="20dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
