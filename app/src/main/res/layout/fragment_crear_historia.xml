<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cabecera -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/fondo_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/flechaatras"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrowback"
        app:tint="@color/azul_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_hc"
        android:tint="@color/azul_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/flechaatras"/>

    <TextView
        android:id="@+id/HistoriaClinicaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historia Clínica"
        android:textColor="@color/azul_main"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flechaatras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/HistoriaClinicaTitulo"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nombre completo -->
            <TextView android:text="Nombre completo"/>
            <EditText
                android:id="@+id/etNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:inputType="text"/>

            <!-- Documento -->
            <TextView android:text="Número de documento"/>
            <EditText
                android:id="@+id/etDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de documento"
                android:inputType="number"/>

            <!-- Teléfono -->
            <TextView android:text="Teléfono"/>
            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:inputType="phone"/>

            <!-- Correo -->
            <TextView android:text="Correo electrónico"/>
            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"/>

            <!-- EPS -->
            <TextView android:text="EPS o Aseguradora"/>
            <EditText
                android:id="@+id/etEps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EPS o aseguradora"
                android:inputType="text"/>

            <!-- Motivo de consulta -->
            <TextView android:text="Motivo de consulta"/>
            <EditText
                android:id="@+id/etMotivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe el motivo"
                android:inputType="textMultiLine"/>

            <!-- Antecedentes -->
            <TextView android:text="Antecedentes"/>
            <EditText
                android:id="@+id/etAntecedentes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Antecedentes relevantes"
                android:inputType="textMultiLine"/>

            <!-- Diagnóstico -->
            <TextView android:text="Diagnóstico"/>
            <EditText
                android:id="@+id/etDiagnostico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Diagnóstico clínico"
                android:inputType="textMultiLine"/>

            <!-- Tratamiento -->
            <TextView android:text="Tratamiento"/>
            <EditText
                android:id="@+id/etTratamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tratamiento sugerido"
                android:inputType="textMultiLine"/>

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/btnGuardarHistoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_rounded"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/fondo_3"
        app:menu="@menu/bottom_menu"
        app:itemIconTint="@color/azul_main"
        app:itemTextColor="@color/azul_main"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
